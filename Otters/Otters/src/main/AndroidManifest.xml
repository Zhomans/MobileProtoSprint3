<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sprint3.otters"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sprint3.otters.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScreenSlideActivity"
            android:label="@string/title_screen_slide"
            android:parentActivityName=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".TaskDetailActivity"
            android:label="TaskDetail"
            android:parentActivityName=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MakeTask"
            android:label="MakeTaskActivity" >
        </activity>
        <activity
            android:name=".Bing"
            android:label="The Searcher" >
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="Show thing in list!" >
        </activity>
        <activity
            android:name="com.sprint3.otters.ViewPagerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sprint3.otters.ViewPagerActivity"
            android:label="@string/app_name" >
